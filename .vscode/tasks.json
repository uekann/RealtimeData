{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "run_task3_server",
			"type": "shell",
			"command": "cargo",
			"args": [
				"run",
				"--bin=task3_server",
				"--package=task3_server"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": [
				{
					"owner": "rust",
					"fileLocation": [
						"relative",
						"${workspaceFolder}"
					],
					"pattern": {
						"regexp": "^(.*)Error: (.*)$",
						"message": 2
					},
					"background": {
						"activeOnStart": true,
						"beginsPattern": "^Listening for connections on port (\\d+)$",
						"endsPattern": "^Listening for connections on port (\\d+)$"
					}
				}
			],
			"isBackground": true
		},
		{
			"label": "stop_task3_server",
			"type": "shell",
			"command": "pkill",
			"args": [
				"-f",
				"task3_server"
			],
			"group": {
				"kind": "test",
				"isDefault": true
			},
			"problemMatcher": []
		}
	]
}